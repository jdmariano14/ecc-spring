<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app 
   xmlns="http://java.sun.com/xml/ns/javaee" 
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" 
   version="2.5">

  <servlet>
    <servlet-name>Persons</servlet-name>
    <servlet-class>com.exist.ecc.person.app.route.PersonRouter</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>Roles</servlet-name>
    <servlet-class>com.exist.ecc.person.app.route.RoleRouter</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>Persons</servlet-name>
    <url-pattern>/persons/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Roles</servlet-name>
    <url-pattern>/roles/*</url-pattern>
  </servlet-mapping>
</web-app>

